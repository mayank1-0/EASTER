<!DOCTYPE html>
<html>

<head>
  <title>DAB R2 â€¢ BMS</title>
  <%- include('./partials/head.ejs') %>
    <script src="../js/common.js"></script>
</head>

<body>
  <%- include('./partials/navbar.ejs', {user: user}) %>
    <div class="container-fluid mt-5">
      <h2 class="p-3 text-center">Book management - Authors</h2>
      <div class="list-group">
        <div class="row px-3 py-1 w-100">
          <span class="col py-1 bg-noroff">Id</span>
          <span class="col py-1 bg-noroff">Author</span>
          <span class="col py-1 bg-noroff">Options</span>
        </div>
        <% authors.forEach(function(item) { %>
          <div class="row px-3 py-1 w-100">
            <span class="col py-1 bg-light">
              <%=item.id%>
            </span>
            <span class="col py-1 bg-light">
              <%=item.author%>
            </span>
            <span class="col py-1 bg-light text-center">
              <button class="btn-sm btn-warning" onclick="updateAuthor( <%=item.id%>)">Update author</button>
              <button class="btn-sm btn-danger" onclick="deleteAuthor( <%=item.id%>)">Delete author</button>
            </span>
          </div>
          <% }); %>
            <hr>
            <div class="row">
              <div class="col-4"></div>
              <div class="col-4 text-center mt-2">
                <form action="/authors/add" method="POST">
                  <button class="btn btn-success" id="btn-add-animal">Add New Author</button>
                </form>
              </div>
              <div class="col-4"></div>
            </div>
      </div>
    </div>
</body>

</html>